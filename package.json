{
  "name": "icelandic-api",
  "version": "0.0.1",
  "description": "An api for exploring icelandic grammar",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index | bunyan",
    "test": "ava",
    "lint": "eslint .",
    "deploy": "./deploy.sh",
    "build-database": "rm -rf db && node ./database/build-database",
    "coverage": "NODE_ENV=test nyc ava && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/talaislensku/tala-api.git"
  },
  "author": "David Blurton",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.9.1",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-polyfill": "^6.7.2",
    "babel-preset-node6": "^11.0.0",
    "babel-preset-stage-1": "^6.5.0",
    "compression": "^1.6.1",
    "concat-stream": "^1.5.1",
    "cors": "^2.7.1",
    "express": "^4.13.4",
    "express-bunyan-logger": "^1.2.0",
    "forever": "^0.15.1",
    "level-sublevel": "^6.5.4",
    "leveldown": "^1.4.4",
    "levelup": "^1.3.1",
    "line-by-line": "^0.1.4",
    "lodash": "^4.6.1",
    "node-statsd": "^0.1.1",
    "response-time": "^2.3.1",
    "run-series": "^1.1.4"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-core": "^6.7.2",
    "babel-eslint": "^5.0.0",
    "babel-plugin-istanbul": "^1.0.3",
    "babel-register": "^6.7.2",
    "bunyan": "^1.7.1",
    "coveralls": "^2.11.12",
    "eslint": "^2.2.0",
    "eslint-config-airbnb": "6.1.0",
    "eslint-plugin-babel": "^3.1.0",
    "nodemon": "^1.9.1",
    "nyc": "^7.1.0"
  },
  "ava": {
    "files": [
      "test/grammar/**/*.js",
      "!test/grammar/word-classes/*.js"
    ],
    "source": [
      "api/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
